{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "composite": true,
        "strict": true,
        "baseUrl": ".",
        "moduleResolution": "node",
        "paths": {
            "@/*": ["./src/*"]
        },
        "typeRoots": ["node_modules/@types", "node_modules/chrome-types"]
    }
}
