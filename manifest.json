{
    "name": "PurpleFox Companion",
    "description": "Extract info from various software to export in PurpleFox",
    "icons": {
        "48": "logo_48.png",
        "128": "logo_128.png"
    },
    "version": "4.2",
    "manifest_version": 3,
    "background": {
        "service_worker": "src/background.ts"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "logo_16.png",
            "48": "logo_48.png",
            "128": "logo_128.png"
        }
    },
    "permissions": ["activeTab", "scripting", "webNavigation", "storage"],
    "host_permissions": ["*://*.gem.fabtcg.com/*", "*://*.carde.io/*"]
}
